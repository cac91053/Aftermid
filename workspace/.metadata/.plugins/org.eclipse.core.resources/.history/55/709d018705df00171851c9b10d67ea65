package yuchia.com;

import org.omg.CORBA.PUBLIC_MEMBER;

public class Chose {
	String name;//(콜㈙)
	int english;//(콜㈙)
	int math;//(콜㈙)
	int chinese;//(콜㈙)

	public void print() {
		System.out.println(english + "\t" + math + "\t" + chinese);
	}

	public Chose(String n, int e, int m, int c) {
		name = n;
		english = e;
		math = m;
		chinese = c;
	}

	public int getAverage() {
		return (english + math + chinese) / 3;
	}
}
